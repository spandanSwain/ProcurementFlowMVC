@model ProcurementFlow.Models.Login.Users

@{
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Procurement DB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProcurementFlow.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            min-height: 100vh;
        }

        .full-page-center {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 5vh;
            padding-bottom: 5vh;
            min-height: 100vh;
        }

        .login-card {
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        .header-bar {
            background-color: #333333;
            color: #ffffff;
            padding: 40px 0;
            text-align: center;
        }

        .header-bar h1 {
            font-family: serif;
            font-size: 2.2em;
            margin: 0;
            font-weight: normal;
        }

        .header-bar h2 {
            font-family: serif;
            font-size: 1.5em;
            margin: 5px 0 0 0;
            font-weight: normal;
        }

        .decorative-bar {
            height: 10px;
            background: linear-gradient(to right, #4CAF50 0%, #FF9800 25%, #E91E63 50%, #2196F3 75%, #FFEB3B 100%);
        }

        #password {
            background-color: #e6f0ff;
        }

        .sign-in-button {
            background-color: #ffffff;
            color: #333333;
            border: 1px solid #333333;
            font-size: 1.1em;
            margin-top: 30px;
        }

        .footer-text {
            color: #555;
            font-size: 0.8em;
            padding: 15px 0;
        }
    </style>
</head>

<body class="full-page-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-7 col-lg-5">

                <div class="login-card">

                    <header class="header-bar">
                        <h1>Sign In</h1>
                        <h2>Procurement DB</h2>
                    </header>

                    <div class="decorative-bar"></div>

                    <div class="p-4 p-md-5">
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger text-center">
                                @TempData["Message"]
                            </div>
                        }

                        <form asp-action="Login" asp-controller="Login" method="post">
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label fw-bold" style="font-size: 0.9em; color: #555;">User ID</label>
                                <input asp-for="UserName"  type="text" id="user-id" placeholder="User ID" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-bold" style="font-size: 0.9em; color: #555;">Password</label>
                                <input asp-for="Password" type="password" id="password" placeholder="Password" class="form-control" required>
                            </div>
                            <button type="submit" class="sign-in-button btn-lg w-100 btn-outline-dark">Sign In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="fixed-bottom text-center bg-light border-top">
        <p class="footer-text mb-0">&copy; 2025 - Procurement DB - <a href="#" style="color: #007bff; text-decoration: none;">Privacy</a></p>
    </footer>
</body>