@model ProcurementFlow.Models.Item_DropDown.ItemViewModel;

@{
    ViewData["Title"] = "Add Items";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="card shadow-sm p-3 mt-3">
    <h4 class="fw-bold mb-2">Add Non-Catalog Items</h4>
    <p class="text-muted mb-3">Add items not present in the items pane</p>

    <form id="nonCatalogForm" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label fw-semibold">Line Type:</label>
            <select class="form-select" asp-for="SelectedLineType" asp-items="Model.LineType" required>
                <option value="">-- Select Line Type --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Name:</label>
            <input type="text" class="form-control" maxlength="255" asp-for="ItemName" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Description:</label>
            <input type="text" class="form-control" maxlength="255" asp-for="ItemDescription" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Category:</label>
            <select class="form-select" asp-for="SelectedCategory" asp-items="Model.Categories" required>
                <option value="">-- Select Category --</option>
            </select>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">UOM:</label>
                <select class="form-select" asp-for="SelectedUOM" asp-items="Model.UOM" required>
                    <option value="">-- Select UOM --</option>
                </select>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Price: (INR)</label>
                <input type="number" oninput="this.value = Math.abs(this.value)" min="1" class="form-control" asp-for="Price" required/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <input type="hidden" value="non-catalog" asp-for="ItemType"/>
        <input type="hidden" value="@Context.Session.GetString("UserID")" asp-for="UpdatedBy" required />
        <input type="hidden" value="@DateTime.Now" asp-for="UpdatedOn"/>

        <div class="mt-3 d-flex justify-content-between">
            <a asp-action="Index" asp-controller="@Context.Session.GetString("Redirect")" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
            </a>

            <div>
                <input type="reset" value="Clear" class="btn btn-secondary ms-2" />
                <input type="submit" value="Add Item" class="btn btn-primary px-4" />
            </div>
        </div>
    </form>

    <hr class="my-4" />

    <h5 class="fw-bold mb-3">Existing Non-Catalog Items</h5>

    <div class="non-catalog-slider d-flex overflow-auto gap-3 pb-2">
        @foreach(var item in Model.NonCatalogItems){
            <div class="card noncat-card">
                <div class="card-body d-flex flex-column">
                    <h6 class="fw-bold mb-1">@item.ItemName</h6>
                    <p class="text-muted small mb-2" style="height: 38px; overflow: hidden;">
                        @item.ItemDescription
                    </p>
                    <div class="mt-auto">
                        <span class="badge bg-primary-subtle text-primary fw-semibold px-2 py-1">
                            ₹@item.Price
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .non-catalog-slider {
        scrollbar-width: thin;
        scrollbar-color: #ccc transparent;
    }

    .non-catalog-slider::-webkit-scrollbar {
        height: 6px;
    }

    .non-catalog-slider::-webkit-scrollbar-thumb {
        background: #bbb;
        border-radius: 4px;
    }

    .noncat-card {
        min-width: 220px;
        border-radius: 14px;
        border: 1px solid #e9ecef;
        transition: all .25s ease;
    }

    .noncat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 18px rgba(0,0,0,0.12);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var msg = '@TempData["NonCatalogMessage"]';

            if (msg && msg.length > 0) {
                document.getElementById("nonCatalogToastBody").innerText = msg;

                var toastEl = document.getElementById('nonCatalogToast');

                if (msg === "Done") {
                    toastEl.classList.remove("bg-danger");
                    toastEl.classList.add("bg-success");
                } else {
                    toastEl.classList.remove("bg-success");
                    toastEl.classList.add("bg-danger");
                }

                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>
}

<div class="position-fixed bottom-0 end-0 p-3" style="z-index:9999;">
    <div id="nonCatalogToast" class="toast align-items-center text-white bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body" id="nonCatalogToastBody"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>